<Page
    x:Class="BrunoUWP.Frm_ParametrizacionRazas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrunoUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:my="using:Microsoft.UI.Xaml.Controls"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media" 
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">
    <Page.Resources>
        <media:AttachedCardShadow x:Key="CommonShadow" Offset="4"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.55*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              ui:Effects.Shadow="{StaticResource CommonShadow}"
              Margin="50,10">
            <StackPanel x:Name="StpPrincipal" 
                        Orientation="Vertical"
                    Margin="20,0,20,0">
                <my:InfoBar x:Name="InfAlerta"/>
                <ComboBox x:Name="CmbTipoMascota"
                      Header="Tipo de Mascota"
                      PlaceholderText="Seleccione Tipo de Mascota"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="CmbTipoMascota_SelectionChanged"/>
                <TextBox x:Name="TxtNombreRaza" 
                     Header="Nombre"/>
                <TextBox x:Name="TxtDescripcionRaza" 
                     Header="Descripcion"/>
                <Button x:Name="BtnGuardar"
                    Margin="0,10,0,0"
                    Content="Guardar"
                    HorizontalAlignment="Center"
                    Click="BtnGuardar_Click"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1"
              ui:Effects.Shadow="{StaticResource CommonShadow}"
              Margin="50,10">
            <StackPanel Margin="20,0,20,0">
                <my:RadioButtons x:Name="RdbTipoMascota"
                                 Margin="10,10,0,0"
                                 SelectedIndex="0"
                                 SelectionChanged="RdbTipoMascota_SelectionChanged"
                                 MaxColumns="3" 
                                 Header="Seleccione el Tipo de Mascota:">
                    <x:String>Perros</x:String>
                    <x:String>Gatos</x:String>
                    <x:String>Conejos</x:String>
                </my:RadioButtons>
                <ScrollViewer>
                    <StackPanel x:Name="StpGrilla" 
                        Orientation="Vertical">
                        <controls:DataGrid x:Name="DtgRazaMascota"
                                   Margin="10"
                                   AutoGenerateColumns="False"
                                   AreRowDetailsFrozen="True"
                                   ColumnHeaderHeight="32"
                                   CanUserReorderColumns="True"
                                   CanUserResizeColumns="True"
                                   CanUserSortColumns="True"
                                   HeadersVisibility="Column"
                                   IsReadOnly="True"
                                   HorizontalAlignment="Stretch"
                                   GridLinesVisibility="Horizontal"
                                   SelectionMode="Extended">
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn Header="Tipo de Mascota" Tag="TipoMascota" Binding="{Binding Nombre_TipoMascota}" />
                                <controls:DataGridTextColumn Header="Nombre de Raza" Tag="NombreRaza" Binding="{Binding Nombre_Raza}" />
                                <controls:DataGridTextColumn Header="Descripcion" Tag="Descripcion" Binding="{Binding Descripcion_Raza}" />
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Grid>
        <my:TeachingTip x:Name="TctAlerta"/>
    </Grid>
</Page>
