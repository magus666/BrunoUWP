<Page
    x:Class="BrunoUWP.Frm_VentaArticulo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrunoUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <NavigationView x:Name="NvvVentaArticulo"
                        PaneDisplayMode="Top"
                        IsSettingsVisible="False"
                        IsBackButtonVisible="Collapsed"
                        IsBackEnabled="False"
                        ItemInvoked="NvvVentaArticulo_ItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="NvmConsultaVentaArticulo" Content="Consulta de Ventas" Tag="ComsultaVentaArtiulo" />
                <NavigationViewItem x:Name="NvmCreaVentaArticulo" Content="Creacion de Ventas" Tag="CreaVentaArticulo" />
            </NavigationView.MenuItems>
            <Frame x:Name="FrmContenido" x:FieldModifier="Public"/>
        </NavigationView>
    </Grid>
</Page>
