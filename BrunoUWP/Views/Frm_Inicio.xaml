<Page
    x:Class="BrunoUWP.Frm_Inicio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrunoUWP"
    xmlns:ui="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <media:AttachedCardShadow x:Key="CommonShadow" Offset="4"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              ui:Effects.Shadow="{StaticResource CommonShadow}"
              Margin="10,0,10,0">
            <TextBlock x:Name="LblTitulo" 
                       Text="Dashboard"
                       FontSize="35"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1"
              Margin="10"
              ui:Effects.Shadow="{StaticResource CommonShadow}">
            <GridView x:Name="GrvDesarrollos"
                      Margin="10,10,0,0"
                      IsItemClickEnabled="False"
                  IsEnabled="False">
                <Grid Margin="5" Height="150" Width="490"
                  ui:Effects.Shadow="{StaticResource CommonShadow}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Baño 1"
                               TextWrapping="Wrap" 
                               TextTrimming="WordEllipsis" 
                               FontSize="24" 
                               LineStackingStrategy="BlockLineHeight"
                               LineHeight="28"
                               Padding="10"/>
                        <TextBlock Text="Firulais"
                               Padding="10"
                               TextWrapping="Wrap" 
                               TextTrimming="WordEllipsis" 
                               FontSize="22" 
                               LineStackingStrategy="BlockLineHeight"
                               LineHeight="28"/>
                        <TextBlock Text="Care Ano"
                               Padding="10"
                               TextWrapping="Wrap" 
                               TextTrimming="WordEllipsis" 
                               FontSize="22" 
                               LineStackingStrategy="BlockLineHeight"
                               LineHeight="28"/>
                    </StackPanel>
                </Grid>
                <Grid Margin="5" Height="150" Width="490"
                  ui:Effects.Shadow="{StaticResource CommonShadow}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Baño 1"
                                       TextWrapping="Wrap" 
                                       TextTrimming="WordEllipsis" 
                                       FontSize="24" 
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="28"
                                   Padding="10"/>
                        <TextBlock Text="Firulais"
                                   Padding="10"
                                       TextWrapping="Wrap" 
                                       TextTrimming="WordEllipsis" 
                                       FontSize="22" 
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="28"/>
                        <TextBlock Text="Care Ano"
                                   Padding="10"
                                       TextWrapping="Wrap" 
                                       TextTrimming="WordEllipsis" 
                                       FontSize="22" 
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="28"/>
                    </StackPanel>
                </Grid>
                <Grid Margin="5" Height="150" Width="490"
                  ui:Effects.Shadow="{StaticResource CommonShadow}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Baño 1"
                                       TextWrapping="Wrap" 
                                       TextTrimming="WordEllipsis" 
                                       FontSize="24" 
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="28"
                                   Padding="10"/>
                        <TextBlock Text="Firulais"
                                   Padding="10"
                                       TextWrapping="Wrap" 
                                       TextTrimming="WordEllipsis" 
                                       FontSize="22" 
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="28"/>
                        <TextBlock Text="Care Ano"
                                   Padding="10"
                                       TextWrapping="Wrap" 
                                       TextTrimming="WordEllipsis" 
                                       FontSize="22" 
                                       LineStackingStrategy="BlockLineHeight"
                                       LineHeight="28"/>
                    </StackPanel>
                </Grid>
            </GridView>
        </Grid>
    </Grid>
</Page>
