<Page
    x:Class="BrunoUWP.Frm_ConfiguracionAplicacion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrunoUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical"
                    Grid.Row="0"
                    Margin="10,0,10,0">
            <TextBlock x:Name="LblTituloTema" Text="Apariencia" Margin="0,10,0,0"/>
            <controls:Expander x:Name="ExpApariencia"
                               HorizontalAlignment="Stretch"
                               IsExpanded="True"
                               HorizontalContentAlignment="Stretch">
                <controls:Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" FontFamily="Segoe Fluent Icons" Glyph="&#xE2B1;" />
                        <TextBlock x:Name="LblHeaderApariencia" Text="Tema de la Aplicacion" />
                    </StackPanel>
                </controls:Expander.Header>
                <controls:Expander.Content>
                    <RelativePanel>
                        <controls:RadioButtons x:Name="RdbTema"
                                               SelectedIndex="1"
                                               Margin="40,0,0,0"
                                               MaxColumns="1"
                                               SelectionChanged="RdbTema_SelectionChanged">
                            <x:String>Claro</x:String>
                            <x:String>Oscuro</x:String>
                            <x:String>Configuracion del Sistema</x:String>
                        </controls:RadioButtons>

                    </RelativePanel>
                </controls:Expander.Content>
            </controls:Expander>
            <TextBlock x:Name="LblTituloInicio" Text="Inicio Automatico" Margin="0,10,0,0"/>
            <controls:Expander x:Name="Expander2"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Stretch"
                               IsExpanded="True">
                <controls:Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Margin="0,0,10,0" FontFamily="Segoe Fluent Icons" Glyph="&#xE7F4;" />
                        <TextBlock x:Name="LblHeader" Text="Configuracion de Inicio" />
                    </StackPanel>
                </controls:Expander.Header>
                <controls:Expander.Content>
                    <RelativePanel>
                        <ToggleSwitch x:Name="TglInicioAplicacion"
                                      VerticalAlignment="Center"
                                      Toggled="TglInicioAplicacion_Toggled"
                                      OnContent="Inicio Automatico activado"
                                      RelativePanel.AlignRightWithPanel="True"
                                      OffContent="Inicio Automatico Desactivado"/>
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="LblNombreInicio"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Text="Iniciar Automaticamente" />
                            <TextBlock x:Name="LblDescripcion"
                                       FontSize="12"
                                   VerticalAlignment="Center"
                                   Text="Activa la casilla para iniciar la aplicacion al iniciar Windows" />
                        </StackPanel>

                    </RelativePanel>
                </controls:Expander.Content>
            </controls:Expander>
        </StackPanel>
    </Grid>
</Page>
